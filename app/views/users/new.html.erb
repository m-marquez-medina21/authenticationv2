<H1 class='py-5'>User registration</H1>

    <%= form_with(model: @user, local: true) do |form| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
        </div>
    <% end %>

<div class="w-50 p-3">
    <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control form-control-sm'%>
    </div>

    <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, class: 'form-control form-control-sm' %>
    </div>

    <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, class: 'form-control form-control-sm' %>
    </div>

        <div class="form-group">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, class: 'form-control form-control-sm' %>
    </div>

    <div class="actions">
        <%= form.submit 'Sign Up', class: 'btn btn-primary' %>
    </div>
    <% end %>
</div>